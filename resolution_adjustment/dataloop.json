{
  "displayName": "Resolution adjustment",
  "name": "image-utils-pillow",
  "scope": "public",
  "version": "0.0.8",
  "description": "The app will change the resolution of an image using the Pillow library",
  "attributes": {
    "Provider": "Other",
    "Category": "Application",
    "Media Type": ["Image"],
    "Deployed By": "Dataloop",
    "Application Type": ["Pipeline Node"]
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/image-utils-pillow.git",
    "gitTag": "0.0.8"
  },
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "pillow-res-adjustment.pillow-res-adjustment.change_resolution"
        },
        "name": "pillow_res_adjustment",
        "categories": ["images"],
        "displayName": "Resolution adjustment",
        "description": "Changing image resolution",
        "scope": "node",
        "configuration": {
          "fields": [
            {
              "name": "name",
              "title": "Node Name",
              "props": {
                "title": true,
                "type": "string",
                "default": "Resolution adjustment",
                "required": true,
                "placeholder": "Insert node name"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "width",
              "title": "Width",
              "props": {
                "title": true,
                "type": "number",
                "default": 1,
                "required": true,
                "placeholder": "Insert width"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                },
                {
                  "type": "gte",
                  "value": 1e-7,
                  "effect": "error",
                  "errorMessage": "Width must be greater than 0"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "height",
              "title": "Height",
              "props": {
                "title": true,
                "type": "number",
                "default": 1,
                "required": true,
                "placeholder": "Insert height"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                },
                {
                  "type": "gte",
                  "value": 1e-7,
                  "effect": "error",
                  "errorMessage": "Height must be greater than 0"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "remote_path",
              "title": "Remote Path",
              "props": {
                "title": true,
                "type": "string",
                "default": "",
                "required": true,
                "placeholder": "Insert remote path"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "pillow-res-adjustment",
        "entryPoint": "resolution_adjustment/resolution_adjustment.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "change_resolution",
            "description": "Changing image resolution",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "icon-dl-resolution-adjustment",
            "displayName": "Resolution adjustment"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "pillow-res-adjustment",
        "moduleName": "pillow-res-adjustment",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "dataloopai/dtlpy-agent:cpu.py3.8.opencv4.7",
          "numReplicas": 1,
          "concurrency": 10,
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false
        },
        "executionTimeout": 172800,
        "drainTime": 600,
        "onReset": "failed",
        "runExecutionAsProcess": false,
        "maxAttempts": 3,
        "operation": "none"
      }
    ]
  }
}
