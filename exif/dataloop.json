{
    "version": "0.0.12",
    "name": "exif-extractor",
    "displayName": "Exif Extractor",
    "description": "Extracts EXIF data from images",
    "scope": "public",
    "attributes": {
        "Category": "Application",
        "Provider": "Dataloop",
        "Deployed By": "Dataloop",
        "License": "Apache 2.0",
        "Application Type": ["Pipeline Node"],
        "Media Type": ["Image"]
    },
    "codebase": {
        "type": "git",
        "gitUrl": "https://github.com/dataloop-ai-apps/image-utils-pillow.git",
        "gitTag": "0.0.12"
      },
    "components": {
        "pipelineNodes": [
            {
                "invoke": {
                    "type": "function",
                    "namespace": "exif-extractor-service.exif-extractor-module.run"
                },
                "name": "Exif Extractor",
                "categories": ["image-utils"],
                "displayName": "Exif Extractor",
                "description": "Extracts EXIF data from images",
                "scope": "project",
                "configuration": {
                    "fields": [
                        {
                            "name": "name",
                            "title": "Node Name",
                            "props": {
                                "title": true,
                                "type": "string",
                                "default": "Exif Extractor",
                                "required": true,
                                "placeholder": "Insert node name"
                            },
                            "rules": [
                                {
                                    "type": "required",
                                    "effect": "error"
                                }
                            ],
                            "widget": "dl-input"
                        }
                    ]
                }
            }
        ],
        "modules": [
            {
                "name": "exif-extractor-module",
                "entryPoint": "exif/main.py",
                "className": "ServiceRunner",
                "initInputs": [],
                "functions": [
                    {
                        "name": "run",
                        "displayIcon": "icon-dl-function",
                        "input": [
                            {
                                "name": "item",
                                "type": "Item"
                            }
                        ], 
                        "output": [
                            {
                                "name": "item",
                                "type": "Item"
                            }
                        ]
                    }
                ]
            }
        ],
        "services": [
            {
                "name": "exif-extractor-service",
                "displayName": "exif-extractor",
                "moduleName": "exif-extractor-module",
                "panelNames": [],
                "initParams": {},
                "runtime": {
                    "podType": "regular-m",
                    "numReplicas": 1,
                    "concurrency": 30,
                    "runnerImage": "dataloop_runner-cpu/main:1.115.22.latest",
                    "autoscaler": {
                        "type": "rabbitmq",
                        "queueLength": 10,
                        "cooldownPeriod": 300,
                        "pollingInterval": 15,
                        "minReplicas": 0,
                        "maxReplicas": 50
                    },
                    "preemptible": true
                },
                "executionTimeout": 15,
                "drainTime": 600
            }
        ]
    }
}
